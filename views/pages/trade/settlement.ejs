<% include ../../partials/header %>

<div class="row">
    <div class="col-md-12">
        <h1 align="center">Settlement</h1>
    </div>
</div>

<div class="row">
  <div class="col-md-8">
    <% include ../../partials/trade %>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        Settle
      </div>
      <form class="form">
        <div class="panel-body">
          <div class="form-group">
            <label>Trade ID</label>
            <select id="tradeId" class="form-control">
            </select>
          </div>
          <div class="form-group">
            <label>Preimage</label>
            <input id="preimage" type="text" class="form-control" placeholder="" />
          </div>
          <div class="form-group text-center">
              <button type="button" class="btn btn-default" id="unlockBtn">Unlock</button>
          </div>
        </div>
      </form>
    </div>
    <div id="unlockMessage"></div>
  </div>
</div>

<script src="/static/js/settlement.js"></script>

<% include ../../partials/footer %>